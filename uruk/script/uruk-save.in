# it and/or modify it under the terms of the GNU GPL, see the file named
# COPYING.

echo -n "# Generated by uruk-save v@VERSION@ on "
date

cat <<EOT
*filter
:INPUT ACCEPT [0:0]
:FORWARD ACCEPT [0:0]
:OUTPUT ACCEPT [0:0]
EOT

URUK_IPTABLES='echo [0:0]' uruk

echo "COMMIT"
echo -n "# Completed on "
date

